{
  "manifest_version": 2,
  "name": "bcksp.es",
  "version": "2.0.0",
  "description": "We archive the text you erase.",
  "author" : "Vincent Evrard",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "jid1-P1oHEt4FsKJNoA@jetpack",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "images/48.standby.png",
      "128": "images/128.standby.png"
    },
    "default_title": "bcksp.es",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
