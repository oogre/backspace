{
  "manifest_version": 2,
  "name": "bcksp.es",
  "version": "2.0.0.2",
  "description": "We archive the text you erase.",
  "author" : "Vincent Evrard",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"],
      "all_frames": true
    }
  ],
  "applications": {
    "gecko": {
      "id": "jid1-P1oHEt4FsKJNoA@jetpack",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "images/48.standby.png",
      "128": "images/128.standby.png"
    },
    "default_title": "bcksp.es"
  },
  "web_accessible_resources": [
    "popup.html"
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id" : "480bcc24-04ca-a942-a09b-cbdd2735fa88",
      "strict_min_version": "52.0"
    }
  }
}
