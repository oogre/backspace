{
  "manifest_version": 2,
  "name": "bcksp.es",
  "version": "2.0.0.2",
  "description": "We archive the text you erase.",
  "author" : "Vincent Evrard",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "images/19.standby.png",
      "38": "images/38.standby.png",
      "48": "images/48.standby.png",
      "128": "images/128.standby.png"
    },
    "default_title": "bcksp.es",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
