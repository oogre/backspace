<div class="container">
	<div class="row">
		<div class="col-sm-offset-4 col-sm-4 highlight">
			<form action="/pwd/submit" method="POST">

				<h2 class="form-signin-heading"><%= __('form_pwd_entry_title') %></h2>
				
				<% 
					if(flash && flash.err){
					var errorName = flash.err.error;
					var errorData = flash.err.data || false;
					%>
						<div class="alert alert-danger">
							<div class="row">
								<div class="col-sm-2">
									<i class="fa fa-exclamation-triangle fa-3x pull-left"></i>
								</div>
								<div class="col-sm-10">
									 <%= __(errorName) %>
								</div>
							</div>
						</div>
					<% 	
					}
				%>

				<div class="form-group">
					<label for="password"><%= __('form_pwd_entry_pw_label') %> :</label>
					<input id="password" type="password" class="form-control" placeholder="<%= __('form_signup_pw')%>" name="password" minlength="6" data-required />
				</div>
				<div class="form-group">
					<input id="passwordConf" type="password" class="form-control" placeholder="<%= __('form_signup_pw_conf')%>" name="confirmation" minlength="6" data-required data-conditional="confirmation"/>
				</div>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-success" value="<%= __('form_pwd_entry_submit') %>" />
				</div>
			</form>
		</div>
	</div>
</div>